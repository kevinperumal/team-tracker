<div class="user-form">
  <form action="/login" method="POST">
    Name: <input type="text" name="user[name]"><br>
    Password: Name: <input type="password" name="user[password]"><br>
   <input type="submit" value="Login"><br>
  </form>
</div>

<a id="signup-link" href='/signup'>New? Sign up!</a>

<div id="signup">
  <form action="/signup" method="POST">
    Name: <input type="text" name="user[name]"><br>
    Password: Name: <input type="password" name="user[password]"><br>
    Confirm Password <input type="password" name="user[password_confirmation]"><br>
   <input type="submit" value="Signup"><br>
  </form>
</div>